{
  "name": "pool-app-v3",
  "version": "3.0.0",
  "private": true,
  "author": "PoolTogether Inc.",
  "repository": "git@github.com:pooltogether/pool-app.git",
  "scripts": {
    "reinstall": "rm -rf ./node_modules && yarn",
    "dev": "npm-run-all --parallel start:app start:server",
    "start:app": "PORT=3000 node --max-old-space-size=8192 server.js",
    "start:server": "netlify-lambda serve functions",
    "postinstall": "netlify-lambda install",
    "build": "next build && next export && yarn postexport",
    "dist": "yarn build && netlify-lambda build functions",
    "export": "next export",
    "postexport": "node post-export.js",
    "release": "./scripts/sentry-release.sh",
    "distrelease": "yarn test && export NEXT_JS_RELEASE_VERSION=$SENTRY_PROJECT:$(sentry-cli releases propose-version) && yarn dist && yarn release",
    "start": "NODE_ENV=production PORT=80 node server.js",
    "test": "jest",
    "testcov": "jest --coverage --coverageDirectory=coverage && open ./coverage/index.html",
    "watch": "yarn run test --watch"
  },
  "jest": {
    "collectCoverageFrom": [
      "lib/**/*.{ts,js}"
    ],
    "coverageReporters": [
      "text",
      "html"
    ],
    "moduleNameMapper": {
      "^lib/(.*)$": "<rootDir>/lib/$1",
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less)$": "identity-obj-proxy"
    },
    "verbose": true
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^9.5.2",
    "babel-jest": "^26.3.0",
    "colors": "^1.4.0",
    "csvtojson": "^2.0.10",
    "express": "^4.17.1",
    "jest": "^26.4.1",
    "netlify-lambda": "^1.6.3",
    "npm-run-all": "^4.1.5"
  },
